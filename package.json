{
	"name": "remap",
	"displayName": "Remap",
	"description": "Faster and more efficient VSCode keybindings",
	"publisher": "refact0r",
	"version": "0.1.4",
	"engines": {
		"vscode": "^1.54.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/refact0r/remap.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "remap.showMode",
				"category": "Remap",
				"title": "Show mode"
			},
			{
				"command": "remap.toggleNormalMode",
				"category": "Remap",
				"title": "Toggle normal mode"
			},
			{
				"command": "remap.toggleSelectMode",
				"category": "Remap",
				"title": "Toggle select mode"
			},
			{
				"command": "remap.toggleDeleteMode",
				"category": "Remap",
				"title": "Toggle delete mode"
			},
			{
				"command": "remap.up",
				"title": ""
			},
			{
				"command": "remap.left",
				"title": ""
			},
			{
				"command": "remap.down",
				"title": ""
			},
			{
				"command": "remap.right",
				"title": ""
			},
			{
				"command": "remap.leftWord",
				"title": ""
			},
			{
				"command": "remap.rightWord",
				"title": ""
			},
			{
				"command": "remap.lineStart",
				"title": ""
			},
			{
				"command": "remap.lineEnd",
				"title": ""
			},
			{
				"command": "remap.newLine",
				"title": ""
			},
			{
				"command": "remap.undo",
				"title": ""
			},
			{
				"command": "remap.redo",
				"title": ""
			},
			{
				"command": "remap.copy",
				"title": ""
			},
			{
				"command": "remap.paste",
				"title": ""
			},
			{
				"command": "remap.cut",
				"title": ""
			},
			{
				"command": "remap.outdent",
				"title": ""
			},
			{
				"command": "remap.indent",
				"title": ""
			}
		],
		"keybindings": [
			{
				"key": "Escape",
				"command": "remap.toggleNormalMode",
				"when": "textInputFocus"
			},
			{
				"key": "i",
				"command": "remap.up",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "j",
				"command": "remap.left",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "k",
				"command": "remap.down",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "l",
				"command": "remap.right",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "u",
				"command": "remap.leftWord",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "o",
				"command": "remap.rightWord",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "h",
				"command": "remap.lineStart",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": ";",
				"command": "remap.lineEnd",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "a",
				"command": "remap.toggleSelectMode",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "s",
				"command": "workbench.action.files.save",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "d",
				"command": "remap.toggleDeleteMode",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "f",
				"command": "remap.newLine",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "g",
				"command": "workbench.action.gotoLine",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "q",
				"command": "workbench.action.files.save",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "y",
				"command": "remap.find",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "z",
				"command": "remap.undo",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "x",
				"command": "remap.redo",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "c",
				"command": "remap.copy",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "v",
				"command": "remap.paste",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "b",
				"command": "remap.cut",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{	
				"key": ",",
				"command": "remap.outdent",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": ".",
				"command": "remap.indent",
				"when": "textInputFocus && config.remap.mode > 0"
			},
			{
				"key": "'",
				"command": "editor.action.commentLine",
				"when": "textInputFocus && config.remap.mode > 0"
			}
		],
		"configuration": {
			"title": "Remap",
			"properties": {
				"remap.changeStatusBarColor": {
					"type": "boolean",
					"default": true,
					"description": "Changes color of status bar based on mode."
				},
				"remap.changeStatusBarText": {
					"type": "boolean",
					"default": true,
					"description": "Changes text in status bar based on mode."
				},
				"remap.editModeColor": {
					"type": "string",
					"default": "",
					"description": "Color of status bar while in edit mode."
				},
				"remap.normalModeColor": {
					"type": "string",
					"default": "#1bddcd90",
					"description": "Color of status bar while in normal mode."
				},
				"remap.selectModeColor": {
					"type": "string",
					"default": "#7f1bdd90",
					"description": "Color of status bar while in select mode."
				},
				"remap.deleteModeColor": {
					"type": "string",
					"default": "#00000090",
					"description": "Color of status bar while in select mode."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
